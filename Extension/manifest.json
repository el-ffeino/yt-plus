{
  "manifest_version": 2,
  "name": "yt-plus",
  "version": "1.0",
  "description": "Download YouTube videos with yt-plus",
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "yt-plus"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "ws://localhost:10575/*",
    "https://www.youtube.com/*",
    "https://youtu.be/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*", "https://youtu.be/*"],
      "js": ["scripts/jquery-3.7.1.js", "scripts/content.js"]
    }
  ]
}